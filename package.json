{
    "name": "vuex-crud",
    "version": "0.3.2",
    "description": "A library for Vuex to build CRUD modules easily",
    "main": "lib/index.js",
    "repository": "https://github.com/JiriChara/vuex-crud",
    "author": "Jiri Chara <jiri@chara.vip>",
    "license": "MIT",
    "scripts": {
        "npm": "npm run build:commonjs",
        "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
        "clean": "rimraf lib coverage esdoc",
        "doc": "mkdirp esdoc && esdoc -c esdoc.json",
        "lint": "eslint src test examples",
        "report": "npm run test && nyc report --reporter=lcov && codecov",
        "test:unit": "nyc ava",
        "test:e2e": "node test/e2e/runner.js",
        "test": "npm run lint && npm run test:unit &&  npm run test:e2e && ava",
        "prepublish": "npm run clean && npm run report && npm run build && npm run doc"
    },
    "files": [
        "src",
        "lib"
    ],
    "devDependencies": {
        "@babel/eslint-parser": "^7.17.0",
        "@babel/preset-stage-2": "^7.8.3",
        "ava": "^4.0.0",
        "axios": "^0.27.2",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.2.5",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "bavaria-ipsum": "^1.0.3",
        "body-parser": "^1.20.0",
        "chromedriver": "^101.0.0",
        "codecov": "^3.8.3",
        "cross-env": "^7.0.3",
        "cross-spawn": "^7.0.3",
        "esdoc": "^1.1.0",
        "eslint": "^8.15.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-html": "^6.2.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.29.4",
        "express": "^4.18.1",
        "growl": "^1.10.5",
        "mkdirp": "^1.0.4",
        "nightwatch": "^2.1.5",
        "nightwatch-helpers": "^1.2.0",
        "nyc": "^15.1.0",
        "phantomjs-prebuilt": "^2.1.16",
        "rimraf": "^3.0.2",
        "selenium-server": "^3.141.59",
        "sinon": "^14.0.0",
        "vue": "^3.2.33",
        "vue-loader": "^17.0.0",
        "vue-router": "^4.0.3",
        "vue-template-compiler": "^2.6.14",
        "vuex": "^4.0.2",
        "vuex-router-sync": "^5.0.0",
        "webpack": "^5.72.1",
        "webpack-dev-middleware": "^5.3.1",
        "webpack-hot-middleware": "^2.25.1"
    },
    "peerDependencies": {
        "axios": "^0.24",
        "vue": "^2.5"
    },
    "ava": {
        "files": [
            "test/unit/**/*.spec.js"
        ],
        "ignoredByWatcher": [
            "src/**/*.js"
        ],
        "concurrency": 5,
        "failFast": true,
        "tap": false,
        "powerAssert": false,
        "require": [
            "babel-register"
        ]
    },
    "nyc": {
        "include": [
            "src/**/*.js"
        ]
    },
    "dependencies": {
        "@ava/babel": "^2.0.0"
    }
}
